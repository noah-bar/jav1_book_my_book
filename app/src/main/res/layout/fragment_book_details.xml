<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.addBook.AddBookFragment">

    <TextView
        android:id="@+id/twBookDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Livre: "
        android:textAlignment="center"
        android:textSize="32dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/etBookDetailsLoanTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prêté à: "
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:inputType="text"
            />
        <Button
            android:id="@+id/btnGetContact"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="C"
            >

        </Button>
    </LinearLayout>

    <EditText
        android:id="@+id/etBookDetailsLoanAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Prêté le: "
        android:inputType="date" />

    <Button
        android:id="@+id/btnBookDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prêter" />
</LinearLayout>