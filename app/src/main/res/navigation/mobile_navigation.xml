<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.book_my_book.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_bookDetailsFragment"
            app:destination="@id/bookDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_book"
        android:name="com.example.book_my_book.ui.addBook.AddBookFragment"
        android:label="@string/title_add_book"
        tools:layout="@layout/fragment_add_book" />
    <fragment
        android:id="@+id/bookDetailsFragment"
        android:name="com.example.book_my_book.ui.bookDetails.BookDetailsFragment"
        android:label="Mon livre"
        tools:layout="@layout/fragment_book_details">

    </fragment>

</navigation>